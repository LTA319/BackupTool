{
  "MySqlBackupTool": {
    "ConnectionString": "Data Source=server_backup_tool.db",
    "EnableEncryption": true,
    "EnableNotifications": true,
    "DefaultCompressionLevel": "Optimal",
    "MaxConcurrentBackups": 5,
    "DefaultRetentionDays": 30,
    "EnableAuditing": true,
    "AuditLogPath": "logs/audit/backup-audit-{Date}.log"
  },
  "ServerConfig": {
    "ListenPort": 8080,
    "MaxConcurrentConnections": 20,
    "EnableSsl": true,
    "SslCertificatePath": "certificates/server.pfx",
    "SslCertificatePassword": "your_certificate_password",
    "AuthenticationRequired": true,
    "AllowedClients": [
      "127.0.0.1",
      "192.168.1.0/24"
    ]
  },
  "StorageConfig": {
    "PrimaryStoragePath": "backups",
    "EnableCompression": true,
    "EnableEncryption": true,
    "MaxStorageSize": "100GB",
    "CleanupInterval": "24:00:00"
  },
  "Alerting": {
    "EnableAlerting": true,
    "BaseUrl": "https://api.example.com",
    "TimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "EnableCircuitBreaker": true,
    "DefaultHeaders": {
      "X-API-Key": "your_api_key_here",
      "User-Agent": "MySqlBackupTool/1.0"
    },
    "MinimumSeverity": "Warning",
    "MaxAlertsPerHour": 50,
    "NotificationTimeout": "00:01:00",
    "Email": {
      "Enabled": true,
      "SmtpServer": "smtp.gmail.com",
      "SmtpPort": 587,
      "UseSsl": true,
      "Username": "backup@example.com",
      "Password": "your_email_password",
      "FromAddress": "backup@example.com",
      "Recipients": [
        "admin@example.com",
        "dba@example.com"
      ]
    },
    "Webhook": {
      "Enabled": false,
      "Url": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
      "HttpMethod": "POST",
      "ContentType": "application/json",
      "AuthToken": "your_webhook_token"
    },
    "FileLog": {
      "Enabled": true,
      "LogDirectory": "logs/alerts",
      "FileNamePattern": "alerts_{yyyy-MM-dd}.log",
      "MaxFileSizeMB": 10,
      "MaxFileCount": 30
    }
  },
  "SmtpConfig": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "EnableSsl": true,
    "Username": "backup@example.com",
    "Password": "your_app_password",
    "FromAddress": "backup@example.com",
    "FromName": "MySQL 备份服务",
    "TimeoutSeconds": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "MySqlBackupTool": "Debug",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "File": {
      "Path": "logs/server-{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 10485760
    },
    "Console": {
      "Enabled": true,
      "IncludeScopes": false
    }
  },
  "MemoryProfiling": {
    "EnableProfiling": false,
    "ProfilingInterval": "00:05:00",
    "MaxMemoryThresholdMB": 1024,
    "EnableGCCollection": true,
    "LogMemoryUsage": true
  }
}